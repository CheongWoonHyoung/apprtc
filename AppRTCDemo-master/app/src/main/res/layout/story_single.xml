<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_gradient">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_back"
            android:background="@drawable/btn_back_full_normal2x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_start"
            android:background="@drawable/btn_start_normal2x"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_marginLeft="91px"
            android:background="#123456"
            android:layout_marginTop="55px"
            android:layout_width="458px"
            android:layout_height="458px"
            android:id="@+id/iv_main" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/booklist_box01_normal3x"
            android:layout_width="640px"
            android:layout_height="716px" />

        <TextView
            android:textStyle="bold"
            android:textSize="56px"
            android:textColor="#1e3f4c"
            android:text="text"
            android:gravity="center"
            android:layout_marginTop="520px"
            android:layout_marginLeft="40px"
            android:layout_width="560px"
            android:layout_height="138px"
            android:id="@+id/tv_single_name" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_single_description"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_single_rate"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>