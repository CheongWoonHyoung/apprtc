<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <org.appspot.apprtc.PercentFrameLayout
            android:id="@+id/remote_video_layout"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/remote_video_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </org.appspot.apprtc.PercentFrameLayout>

        <org.appspot.apprtc.PercentFrameLayout
            android:id="@+id/local_video_layout"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/local_video_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </org.appspot.apprtc.PercentFrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDDDDD">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:id="@+id/fl_play">
                <RelativeLayout
                    android:background="#FFFFFF"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="320px">
                    <TextView
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:text="text"
                        android:textColor="#1e3f4c"
                        android:textSize="56px"
                        android:layout_width="1794px"
                        android:layout_height="240px" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/recordBtn"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="200px"
                    android:layout_marginLeft="50px"
                    android:layout_width="243px"
                    android:layout_height="243px"
                    android:src="@drawable/btn_voice_normal3x"/>
                <ImageView
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="40px"
                    android:layout_marginRight="40px"
                    android:layout_width="243px"
                    android:layout_height="243px"
                    android:src="@drawable/btn_play_normal3x"
                    android:id="@+id/playBtn" />
                <ImageView
                    android:layout_width="243px"
                    android:layout_height="243px"
                    android:src="@drawable/btn_pause_normal3x"
                    android:layout_marginRight="40px"
                    android:layout_gravity="right"
                    android:layout_marginTop="40px"/>
            </FrameLayout>
            
        </RelativeLayout>

    </FrameLayout>



    <FrameLayout
        android:id="@+id/call_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
    <FrameLayout
        android:id="@+id/hud_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>
